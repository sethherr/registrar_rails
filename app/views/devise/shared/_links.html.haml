- if devise_mapping.omniauthable? && Rails.application.credentials.bike_index[:app_secret].present?
  - verb = controller_name == "sessions" ? "in" : "up"
  = link_to "Sign #{verb} with GlobaliD", "#", class: "btn btn-outline-success"
  = link_to "Sign #{verb} with Bike Index", user_bike_index_omniauth_authorize_path, class: "btn btn-outline-info"
  .mb-2
.form-group
  - if controller_name != "sessions"
    = link_to "Sign in", new_session_path(resource_name)
    %br/
  - if controller_name != "registrations"
    = link_to "Sign up", new_user_registration_path
    %br/
  - if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations"
    = link_to "Forgot your password?", new_password_path(resource_name)
    %br/
  - if devise_mapping.confirmable? && controller_name != "confirmations"
    = link_to "Didn't receive confirmation instructions", new_confirmation_path(resource_name)
    %br/
